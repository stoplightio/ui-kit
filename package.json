{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react",
    "ui",
    "ui-components"
  ],
  "main": "dist/index.js",
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/ui-kit",
  "bugs": "https://github.com/stoplightio/ui-kit/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*",
    "!__tests__",
    "!__stories__"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "build": "sl-scripts build",
    "build.docs": "build-storybook -c .storybook -o docs-auto",
    "commit": "git-cz",
    "lint": "sl-scripts lint",
    "lint.fix": "yarn lint --fix",
    "release": "sl-scripts release",
    "release.docs": "sl-scripts release:docs",
    "release.dryRun": "sl-scripts release --dry-run --debug",
    "storybook": "start-storybook -p 9001",
    "test": "sl-scripts test",
    "test.prod": "yarn lint && yarn test --coverage --no-cache",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch",
    "chromatic": "chromatic test"
  },
  "peerDependencies": {
    "react": "16.x.x"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.x",
    "@fortawesome/react-fontawesome": "0.1.3",
    "@types/enzyme": "^3.1.15",
    "@types/lodash": "4.x.x",
    "@types/react-input-autosize": "2.0.x",
    "@types/react-textarea-autosize": "4.3.x",
    "@types/styled-components": "4.0.x",
    "@types/styled-system": "3.0.x",
    "lodash": "4.x.x",
    "react-input-autosize": "2.2.x",
    "react-textarea-autosize": "7.1.0-1",
    "styled-components": "4.0.x",
    "styled-system": "3.1.x"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "5.5.x",
    "@fortawesome/free-regular-svg-icons": "5.5.x",
    "@fortawesome/free-solid-svg-icons": "5.5.x",
    "@sambego/storybook-state": "1.x.x",
    "@stoplight/scripts": "1.2.3",
    "@types/react": "16.x.x",
    "@types/react-dom": "16.x.x",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "jest-enzyme": "^7.0.1",
    "react": "16.x.x",
    "react-dom": "16.x.x",
    "storybook-chromatic": "1.2.x",
    "typescript": "3.1.6"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "@stoplight/scripts/release"
  }
}
