{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react",
    "ui",
    "ui-components"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/ui-kit",
  "bugs": "https://github.com/stoplightio/ui-kit/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "build": "sl-scripts build && yarn build.styles && mv dist/src/styles dist && rm -rf dist/src",
    "build.styles": "yarn build.bp && yarn build.tw && copyfiles src \"./src/**/*.scss\" ./dist && copyfiles \"./src/styles/blueprint/icons/*\" ./dist",
    "build.bp": "node-sass ./scripts/build-blueprint-icons/blueprint-icons.scss ./src/styles/blueprint/_icons.scss --functions ./scripts/build-blueprint-icons/sass-inline-svg.js --importer node_modules/node-sass-package-importer/dist/cli.js",
    "build.tw": "postcss ./scripts/build-tailwind/tailwind.css -o ./src/styles/tailwind/_base.scss -c ./sripts/tailwind-build/postcss.config.js",
    "commit": "git-cz",
    "lint": "tslint -c tslint.json 'src/**/*.ts(?)'",
    "lint.fix": "yarn lint --fix",
    "release": "sl-scripts release",
    "release.dryRun": "sl-scripts release --dry-run --debug",
    "storybook": "start-storybook -p 9001",
    "test": "jest",
    "test.prod": "yarn lint && yarn test --coverage --no-cache --runInBand",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch"
  },
  "peerDependencies": {
    "prismjs": ">=1.16",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.15.1",
    "@blueprintjs/icons": "^3.8.0",
    "@blueprintjs/select": "^3.8.0",
    "@fortawesome/fontawesome-svg-core": "1.2.17",
    "@fortawesome/react-fontawesome": "0.1.4",
    "@stoplight/types": "4.1.x",
    "classnames": "^2.2.6",
    "immer": "^2.0.0",
    "react-custom-scrollbars": "4.2.x",
    "react-simple-code-editor": "0.9.10",
    "react-window": "1.8.1",
    "refractor": "2.8.0",
    "use-immer": "^0.2.2",
    "use-resize-observer": "3.1.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@fortawesome/free-brands-svg-icons": "5.8.1",
    "@fortawesome/free-regular-svg-icons": "5.8.1",
    "@fortawesome/free-solid-svg-icons": "5.8.1",
    "@sambego/storybook-state": "1.x.x",
    "@stoplight/json": "^1.9.0",
    "@stoplight/scripts": "5.1.x",
    "@storybook/addon-actions": "5.0.10",
    "@storybook/addon-info": "5.0.x",
    "@storybook/addon-knobs": "5.0.10",
    "@storybook/addon-links": "5.0.10",
    "@storybook/addon-options": "5.0.x",
    "@storybook/addons": "5.0.10",
    "@storybook/core": "5.0.10",
    "@storybook/react": "5.0.10",
    "@storybook/theming": "^5.0.10",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "3.9.x",
    "@types/enzyme-adapter-react-16": "1.0.x",
    "@types/jest": "24.0.x",
    "@types/lodash": "^4.14.123",
    "@types/node-sass": "^4.11.0",
    "@types/prettier": "^1.16.2",
    "@types/prismjs": "1.16.x",
    "@types/react": "16.8.13",
    "@types/react-custom-scrollbars": "4.0.x",
    "@types/react-dom": "16.8.4",
    "@types/react-window": "1.8.x",
    "@types/storybook__addon-actions": "3.4.x",
    "@types/storybook__addon-knobs": "5.0.0",
    "@types/storybook__addon-links": "3.3.x",
    "@types/storybook__addon-options": "4.0.x",
    "@types/storybook__react": "4.0.x",
    "@types/yup": "^0.26.12",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "copyfiles": "^2.1.0",
    "enzyme": "3.9.x",
    "enzyme-adapter-react-16": "1.12.1",
    "enzyme-to-json": "3.3.x",
    "jest": "24.7.x",
    "jest-enzyme": "7.0.x",
    "lodash": "4.17.11",
    "node-sass": "^4.11.0",
    "node-sass-package-importer": "^5.3.1",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "prettier": "1.17.x",
    "prismjs": "1.15.x",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "sass-inline-svg": "^1.2.0",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.0.0-beta.4",
    "ts-jest": "24.0.x",
    "ts-loader": "^5.3.3",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.x",
    "tslint-config-stoplight": "1.2.x",
    "tslint-plugin-prettier": "2.0.x",
    "tslint-react": "4.0.x",
    "tslint-react-hooks": "2.0.x",
    "typescript": "3.4.4",
    "webpack": "^4.30.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "@stoplight/scripts/release"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
