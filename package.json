{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react",
    "ui",
    "ui-components"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/ui-kit",
  "bugs": "https://github.com/stoplightio/ui-kit/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "build": "sl-scripts build && yarn build.styles",
    "build.styles": "yarn build.tw && copyfiles -u 1 \"./src/styles/**/*\" ./dist",
    "build.tw": "postcss ./scripts/build-tailwind/tailwind.css -o ./src/styles/tailwind/_base.scss -c ./sripts/tailwind-build/postcss.config.js",
    "commit": "git-cz",
    "lint": "tslint -c tslint.json 'src/**/*.ts(?)'",
    "lint.fix": "yarn lint --fix",
    "release": "sl-scripts release",
    "release.dryRun": "sl-scripts release --dry-run --debug",
    "storybook": "start-storybook -p 9001",
    "test": "jest",
    "test.prod": "yarn lint && yarn test --coverage --no-cache --runInBand",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.15.1",
    "@blueprintjs/icons": "^3.8.0",
    "@blueprintjs/select": "^3.8.0",
    "@stoplight/types": "4.1.x",
    "classnames": "^2.2.6",
    "immer": "^2.0.0",
    "react-scrollbars-custom": "^4.0.0-alpha.13",
    "prismjs": "1.16.x",
    "react-simple-code-editor": "0.9.10",
    "react-tabs": "^3.0.0",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "1.8.1",
    "refractor": "2.9.x",
    "use-immer": "^0.2.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.x",
    "@sambego/storybook-state": "1.x.x",
    "@stoplight/json": "2.0.x",
    "@stoplight/scripts": "5.1.x",
    "@storybook/addon-actions": "5.0.11",
    "@storybook/addon-info": "5.0.x",
    "@storybook/addon-knobs": "5.0.11",
    "@storybook/addon-links": "5.0.11",
    "@storybook/addon-options": "5.0.x",
    "@storybook/addons": "5.0.11",
    "@storybook/core": "5.0.11",
    "@storybook/react": "5.0.11",
    "@storybook/theming": "^5.0.11",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "3.9.x",
    "@types/enzyme-adapter-react-16": "1.0.x",
    "@types/jest": "24.0.x",
    "@types/lodash": "4.14.x",
    "@types/node-sass": "^4.11.0",
    "@types/prettier": "1.16.x",
    "@types/prismjs": "1.16.x",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "@types/react-tabs": "^2.3.1",
    "@types/react-virtualized-auto-sizer": "^1.0.0",
    "@types/react-window": "1.8.x",
    "@types/storybook__addon-actions": "3.4.x",
    "@types/storybook__addon-knobs": "5.0.0",
    "@types/storybook__addon-links": "3.3.x",
    "@types/storybook__addon-options": "4.0.x",
    "@types/storybook__react": "4.0.x",
    "@types/yup": "0.26.x",
    "autoprefixer": "9.5.x",
    "babel-loader": "8.0.x",
    "copyfiles": "2.1.x",
    "enzyme": "3.9.x",
    "enzyme-adapter-react-16": "1.13.x",
    "enzyme-to-json": "3.3.x",
    "jest": "24.8.x",
    "jest-enzyme": "7.0.x",
    "lodash": "4.17.11",
    "node-sass": "4.12.x",
    "node-sass-package-importer": "^5.3.1",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "prettier": "1.17.x",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "resolve-url-loader": "^3.1.0",
    "sass-inline-svg": "^1.2.0",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.0.0-beta.4",
    "ts-jest": "24.0.x",
    "ts-loader": "6.x.x",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.x",
    "tslint-config-stoplight": "1.2.x",
    "tslint-plugin-prettier": "2.0.x",
    "tslint-react": "4.0.x",
    "tslint-react-hooks": "2.0.x",
    "typescript": "3.4.5",
    "webpack": "4.31.x"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "@stoplight/scripts/release"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
