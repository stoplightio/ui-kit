{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react",
    "ui",
    "ui-components"
  ],
  "main": "dist/index.js",
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/ui-kit",
  "bugs": "https://github.com/stoplightio/ui-kit/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "build": "sl-scripts build",
    "build.docs": "build-storybook -c .storybook -o docs-auto",
    "commit": "git-cz",
    "lint": "sl-scripts lint",
    "lint.fix": "yarn lint --fix",
    "release": "sl-scripts release",
    "release.docs": "sl-scripts release:docs",
    "release.dryRun": "sl-scripts release --dry-run --debug",
    "storybook": "start-storybook -p 9001",
    "test": "sl-scripts test",
    "test.prod": "yarn lint && yarn test --coverage --no-cache --runInBand",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch",
    "chromatic": "chromatic test"
  },
  "peerDependencies": {
    "lodash": ">=4.17",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "dependencies": {
    "@emotion/core": "10.0.x",
    "@fortawesome/fontawesome-svg-core": "1.2.x",
    "@fortawesome/react-fontawesome": "0.1.3",
    "prismjs": "1.15.x",
    "react-contextmenu": "2.10.x",
    "react-custom-scrollbars": "4.2.x",
    "react-input-autosize": "2.2.x",
    "react-select": "2.1.x",
    "react-simple-code-editor": "0.8.x",
    "react-tabs": "^3.0.0",
    "react-textarea-autosize": "7.1.x",
    "react-window": "1.5.x",
    "styled-system": "3.1.x",
    "use-resize-observer": "2.0.1"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "5.6.x",
    "@fortawesome/free-regular-svg-icons": "5.6.x",
    "@fortawesome/free-solid-svg-icons": "5.6.x",
    "@sambego/storybook-state": "1.x.x",
    "@stoplight/scripts": "3.1.0",
    "@stoplight/types": "3.1.x",
    "@types/lodash": "4.x.x",
    "@types/prismjs": "1.9.x",
    "@types/react": "16.x.x",
    "@types/react-custom-scrollbars": "4.0.x",
    "@types/react-dom": "16.x.x",
    "@types/react-input-autosize": "2.0.x",
    "@types/react-select": "2.0.x",
    "@types/react-tabs": "^2.3.0",
    "@types/react-textarea-autosize": "4.3.x",
    "@types/react-window": "1.1.x",
    "@types/styled-system": "3.0.x",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "storybook-chromatic": "1.2.x",
    "typescript": "3.2.2"
  },
  "lint-staged": {
    "{*.ts, *.tsx}": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "@stoplight/scripts/release"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
