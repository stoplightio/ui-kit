{
  "name": "@stoplight/ui-kit",
  "version": "0.0.0",
  "description": "Foundational React components for the Stoplight ecosystem.",
  "keywords": [
    "react",
    "ui",
    "ui-components"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/ui-kit",
  "bugs": "https://github.com/stoplightio/ui-kit/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/ui-kit.git"
  },
  "license": "Apache-2.0",
  "files": [
    "**/*"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "build": "sl-scripts build",
    "build.docs": "build-storybook -c .storybook -o docs-auto",
    "commit": "git-cz",
    "lint": "tslint -c tslint.json 'src/**/*.ts?'",
    "lint.fix": "yarn lint --fix",
    "release": "sl-scripts release",
    "release.docs": "sl-scripts release:docs",
    "release.dryRun": "sl-scripts release --dry-run --debug",
    "storybook": "start-storybook -p 9001",
    "test": "jest",
    "test.prod": "yarn lint && yarn test --coverage --no-cache --runInBand",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch"
  },
  "peerDependencies": {
    "lodash": ">=4.17.11",
    "prismjs": ">=1.15",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "dependencies": {
    "@emotion/core": "10.0.7",
    "@emotion/is-prop-valid": "0.7.3",
    "@fortawesome/fontawesome-svg-core": "1.2.15",
    "@fortawesome/react-fontawesome": "0.1.4",
    "@stoplight/types": "3.1.x",
    "@types/styled-system": "3.2.x",
    "prop-types": "15.7.x",
    "react-contextmenu": "2.10.x",
    "react-custom-scrollbars": "4.2.x",
    "react-input-autosize": "2.2.x",
    "react-select": "2.4.x",
    "react-simple-code-editor": "0.9.3",
    "react-tabs": "3.0.x",
    "react-textarea-autosize": "7.1.x",
    "react-window": "1.5.2",
    "refractor": "2.6.2",
    "styled-system": "3.2.1",
    "use-resize-observer": "3.1.0"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "5.7.2",
    "@fortawesome/free-regular-svg-icons": "5.7.2",
    "@fortawesome/free-solid-svg-icons": "5.7.2",
    "@sambego/storybook-state": "1.x.x",
    "@stoplight/scripts": "5.0.x",
    "@stoplight/storybook-config": "1.2.x",
    "@storybook/addon-info": "4.1.x",
    "@storybook/addon-options": "4.1.x",
    "@types/enzyme": "3.9.x",
    "@types/enzyme-adapter-react-16": "1.0.x",
    "@types/jest": "24.0.x",
    "@types/lodash": "4.14.x",
    "@types/prismjs": "1.9.x",
    "@types/react": "16.8.4",
    "@types/react-custom-scrollbars": "4.0.x",
    "@types/react-dom": "16.8.2",
    "@types/react-input-autosize": "2.0.x",
    "@types/react-select": "2.0.x",
    "@types/react-tabs": "2.3.x",
    "@types/react-textarea-autosize": "4.3.x",
    "@types/react-window": "1.5.x",
    "enzyme": "3.9.x",
    "enzyme-adapter-react-16": "1.9.x",
    "enzyme-to-json": "3.3.x",
    "jest": "24.1.x",
    "jest-enzyme": "7.0.x",
    "lodash": "4.17.11",
    "prettier": "1.16.x",
    "prismjs": "1.15.x",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "ts-jest": "24.0.x",
    "tslint": "5.13.x",
    "tslint-config-prettier": "1.18.x",
    "tslint-config-stoplight": "1.2.x",
    "tslint-plugin-prettier": "2.0.x",
    "tslint-react": "3.6.x",
    "tslint-react-hooks": "1.1.x",
    "typescript": "3.3.3333"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "extends": "@stoplight/scripts/release"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
